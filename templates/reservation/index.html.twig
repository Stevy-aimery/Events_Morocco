{# templates/reservation/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
    <div class="bg-white p-8 rounded-3xl border border-gray-200 shadow-2xl max-w-lg w-full">
        <h1 class="text-2xl font-bold text-center text-orange-500 mb-6">Réservation</h1>
        
        {{ form_start(bookingForm) }}
        
        <div class="mb-4">
            <label for="libelle" class="block text-sm font-bold text-gray-800">Événement</label>
            {{ form_widget(bookingForm.libelle, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}, 'value': event.titre }) }}
        </div>
        
        
        <div class="mb-4">
            <label for="montant" class="block text-sm font-bold text-gray-800">Montant</label>
            {{ form_widget(bookingForm.montant, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}, 'value': event.prixBillet }) }}
        </div>

        <div class="mb-4">
            <label for="nom" class="block text-sm font-bold text-gray-800">Nom</label>
            {{ form_widget(bookingForm.nom, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}}) }}
        </div>
        
        <div class="mb-4">
            <label for="prenom" class="block text-sm font-bold text-gray-800">Prénom</label>
            {{ form_widget(bookingForm.prenom, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}}) }}
        </div>
        
        <div class="mb-4">
            <label for="numeroCarte" class="block text-sm font-bold text-gray-800">Numéro de carte</label>
            {{ form_widget(bookingForm.numeroCarte, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}}) }}
        </div>
        
        <div class="mb-4">
            <label for="typeCarte" class="block text-sm font-bold text-gray-800">Type de carte</label>
            {{ form_widget(bookingForm.typeCarte, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}}) }}
        </div>
        
        <div class="mb-4">
            <label for="cryptogramme" class="block text-sm font-bold text-gray-800">Cryptogramme</label>
            {{ form_widget(bookingForm.cryptogramme, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}}) }}
        </div>
        
        <div class="mb-4">
            <label for="dateExpiration" class="block text-sm font-bold text-gray-800">Date d'expiration</label>
            {{ form_widget(bookingForm.dateExpiration, {'attr': {'class': 'form-input w-full border border-gray-300 rounded-md py-2 px-3'}}) }}
        </div>
        
        <button type="submit" class="mt-3 w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-500 text-base font-medium text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            Payer
        </button>
        
        {{ form_end(bookingForm) }}
    </div>
</div>

{% if success %}
<script>
    alert('Payement realisee avec succès');
     window.location.href = "{{ path('event_index') }}"
</script>
{% endif %}
{% endblock %}
