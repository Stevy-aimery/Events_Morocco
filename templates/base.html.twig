<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <!-- Custom Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text><text y='1.3em' x='0.2em' font-size='76' fill='#fff'>sf</text></svg>">
    
    <!-- Compiled CSS -->
    <link rel="stylesheet" href="{{ asset('build/vendors-node_modules_hotwired_stimulus_dist_stimulus_js-node_modules_bootstrap_dist_css_boots-00c945.css') }}">
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"/>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.0/mdb.min.css" rel="stylesheet"/>
</head>

<style>
    .input-field {
        border: 1px solid #E5E7EB;
        padding: 0.5rem;
        width: calc(100% - 1rem);
        border-radius: 0.25rem;
    }
</style>

<body>
    {% block body %}

    {% endblock %}
    
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.0/mdb.umd.min.js"></script>
    
    <script src="{{ asset('build/runtime.js') }}"></script>
    <script src="{{ asset('build/vendors-node_modules_hotwired_stimulus_dist_stimulus_js-node_modules_bootstrap_dist_css_boots-00c945.js') }}"></script>
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('build/vendors-node_modules_mdb-ui-kit_js_mdb_min_js.js') }}"></script>
    <script src="{{ asset('build/mdb-init.js') }}"></script>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}

        {% block importmap %}
            {{ importmap('app') }}
        {% endblock %}
        {# {{ encore_entry_script_tags('mdb-init') }} #}
    {% endblock %}
</body>
</html>
