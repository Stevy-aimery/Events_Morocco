{# templates/event/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	{{ event.titre }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ event.titre }}</h1>
		<img src={{ event.image }} class="card-img-top" alt={{ event.image }} style="width: 20rem;">
		<p>{{ event.description }}</p>
		<p>
			<strong>Date Début:</strong>
			{{ event.dateDebut | date('d/m/Y') }}</p>
		<strong>Date Fin:</strong>
		{{ event.dateFin | date('d/m/Y') }}</p>
	<p>
		<strong>Capacité d'accueil:</strong>
		{{ event.capacite }}</p>
	<p>
		<strong>Prix du Billet:</strong>
		{{ event.prixBillet }}</p>
	<p>
		<strong>Lieu de l'évenement:</strong>
		{{ event.lieu}}</p>

	<a href="{{ path('event_booking', {'id': event.id}) }}" class="btn btn-success">Réservation</a>
</div>


{% endblock %}
