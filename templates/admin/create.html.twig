{% extends 'base.html.twig' %}

{% block title %}Create Event{% endblock %}

{% block body %}
<div class="flex justify-center items-center min-h-screen">
    <div class="bg-white rounded-lg shadow-md p-6 max-w-lg w-full">
        <h1 class="text-2xl font-semibold mb-4">Create a New Event</h1>
        {{ form_start(eventForm, {'attr': {'class': 'space-y-4'}}) }}
            <div>
                {{ form_label(eventForm.titre, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.titre, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.titre) }}
            </div>
            <div>
                {{ form_label(eventForm.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.description, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.description) }}
            </div>
            <div>
                {{ form_label(eventForm.dateDebut, 'Start Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.dateDebut, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.dateDebut) }}
            </div>
            <div>
                {{ form_label(eventForm.dateFin, 'End Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.dateFin, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.dateFin) }}
            </div>
            <div>
                {{ form_label(eventForm.capacite, 'Capacity', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.capacite, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.capacite) }}
            </div>
            <div>
                {{ form_label(eventForm.prixBillet, 'Ticket Price', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.prixBillet, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.prixBillet) }}
            </div>
            <div>
                {{ form_label(eventForm.image, 'Image', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.image, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.image) }}
            </div>
            <div>
                {{ form_label(eventForm.lieu, 'Location', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(eventForm.lieu, {'attr': {'class': 'mt-1 block w-full p-2 border border-gray-300 rounded-md'}}) }}
                {{ form_errors(eventForm.lieu) }}
            </div>
            <div>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Create Event
                </button>
            </div>
        {{ form_end(eventForm) }}
    </div>
</div>
{% endblock %}
